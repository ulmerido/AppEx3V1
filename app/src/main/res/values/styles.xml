<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/cardview_dark_background</item>
    </style>

    <style name="RatingBar" parent="Widget.AppCompat.RatingBar.Small">
        <item name="colorControlNormal">@color/radioBoxColor</item>
        <item name="colorControlActivated">@color/radioBoxColor</item>
    </style>

    <style name="RatingBar2"
        parent="android:style/Widget.Material.RatingBar.Small">
        <item name="colorControlNormal">@color/primary_light</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
    </style>

    <style name="DialogeTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:background">@color/DimGray</item>
        <item name="colorAccent">@android:color/holo_red_dark</item>
    </style>

</resources>
