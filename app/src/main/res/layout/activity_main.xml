<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background3"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="242dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"

        android:ems="10"
        android:hint="user email"
        android:inputType="textEmailAddress"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/et_UserPassword"
        android:layout_width="241dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etEmail"
        android:layout_alignParentStart="true"

        android:ems="10"
        android:hint="user password"
        android:inputType="textPassword"
        android:textAlignment="center" />



    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="248dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/googleSignInButton"
        android:layout_gravity="center_horizontal"
        android:text="Sign in"
        android:textAlignment="center"
        tools:text="Sign in" />

    <Button
        android:id="@+id/btn_SignIn"
        android:layout_width="238dp"
        android:layout_height="38dp"
        android:layout_below="@+id/et_UserPassword"
        android:background="@color/colorPrimaryDark"
        android:backgroundTint="@color/colorPrimary"
        android:backgroundTintMode="screen"
        android:text="Login"
        android:textColor="@color/cardview_light_background"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tvForgetPass"
        android:layout_width="144dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_SignIn"
        android:text="Forget Password?"
        android:textAlignment="center"
        android:textSize="14sp"
        android:textStyle="bold" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/googleSignInButton"
        android:layout_width="250dp"
        android:layout_height="39dp"
        android:layout_below="@+id/tvForgetPass"
        android:textAlignment="center"></com.google.android.gms.common.SignInButton>


    <TextView
        android:id="@+id/tvSignUp"
        android:layout_width="219dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_button"
        android:text="No account yet? Create one"
        android:textColor="@color/com_facebook_button_background_color_pressed"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvAnonymous"
        android:layout_width="218dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvSignUp"
        android:text="sign in anonymously"
        android:textAlignment="textStart"
        android:textColor="@color/colorAccent"
        android:textSize="16sp" />

</RelativeLayout>