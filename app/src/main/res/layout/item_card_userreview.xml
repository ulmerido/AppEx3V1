<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        android:id="@+id/item_card_UserReview"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:elevation="16dp"
        card_view:cardCornerRadius="4dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="4dp">

            <TextView
                android:id="@+id/UserReview_rating_tv"
                android:layout_width="26dp"
                android:layout_height="24dp"

                android:layout_marginEnd="10dp"
                android:layout_marginBottom="104dp"
                android:text="[4]"
                app:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintEnd_toStartOf="@+id/UserReview_ratingstar_iv" />

            <TextView
                android:id="@+id/UserReview_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="44dp"
                android:layout_marginTop="12dp"
                android:text="[User Name]"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                android:textStyle="bold"
                card_view:layout_constraintStart_toEndOf="@+id/UserReview_ratingstar_iv"
                card_view:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/UserReview_Date"
                android:layout_width="97dp"
                android:layout_height="23dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="80dp"
                android:text="[Date]"
                android:textColor="@android:color/holo_blue_dark"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="@+id/UserReview_ratingstar_iv" />

            <TextView
                android:id="@+id/UserReview_header"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="36dp"
                android:text="[Review Header]"
                android:textAlignment="center"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="20sp"
                android:textStyle="bold"
                card_view:layout_constraintStart_toEndOf="@+id/UserReview_Date"
                card_view:layout_constraintTop_toTopOf="@+id/UserReview_user_name" />

            <TextView
                android:id="@+id/UserReview_body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="120dp"
                android:layout_marginTop="12dp"
                android:text="[review body]"
                android:textColor="@android:color/holo_blue_light"
                android:textSize="14sp"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toBottomOf="@+id/UserReview_header" />

            <ImageView
                android:id="@+id/UserReview_ratingstar_iv"
                android:layout_width="33dp"
                android:layout_height="31dp"
                android:layout_marginStart="36dp"
                android:layout_marginEnd="22dp"
                android:layout_marginBottom="100dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:srcCompat="@drawable/raitingstar"
                card_view:layout_constraintEnd_toStartOf="@+id/UserReview_user_name"
                card_view:layout_constraintStart_toStartOf="parent" />

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>