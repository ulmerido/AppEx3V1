<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background6"
    tools:context=".Activities.UserActivity">
    <include layout="@layout/app_bar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/ivFacebook"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:background="@drawable/border_image"
            android:cropToPadding="true"
            android:padding="3dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background"

            tools:layout_editor_absoluteX="131dp"
            tools:layout_editor_absoluteY="16dp"
            tools:srcCompat="@tools:sample/avatars" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tvStatusUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:background="@drawable/roundet"
        android:backgroundTint="@color/com_facebook_button_background_color_disabled"
        android:fontFamily="@font/roboto_medium"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvUserNameFacebook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:background="@drawable/roundet"
        android:backgroundTint="@color/com_facebook_button_background_color_disabled"
        android:fontFamily="@font/roboto_medium"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tvEmailFacebook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:background="@drawable/roundet"
        android:backgroundTint="@color/com_facebook_button_background_color_disabled"
        android:fontFamily="@font/roboto_medium"
        android:textSize="24sp" />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_UploadPic"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/btnback"
        android:text="UPLOAD PROFILE IMAGE"
        android:textAlignment="center" />
    <Button
        android:id="@+id/btn_Logout"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@id/btn_UploadPic"
        android:layout_marginTop="8dp"
        android:text="Log out"
        android:background="@drawable/btnback"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/tv_remove"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_Logout"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="8dp"
        android:text="Remove Account"
        android:textAlignment="center"
        android:textColor="@android:color/holo_red_light"
        android:textSize="24sp" />

</RelativeLayout>



</LinearLayout>